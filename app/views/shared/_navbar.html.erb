<div class="navbar navbar-expand-sm navbar-light navbar-waytozero">
  <div class="row">
    <%= link_to root_path, class: "navbar-brand", style: "margin: 0.25em 0.5em" do %>
      <%= image_tag "logo.png" %>
      <% end %>
    <div class="navbar-header">Way To Zero</div>
  </div>

<%
=begin %>
<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<%
=end %>

  <div class="dropdown dropdown-selector-desktop">
    <button class="dropdown-toggle dropdown-btn" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= t("locales.#{I18n.locale}") %>
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <% [:fr, :en, :nl].each do |locale| %>
      <%= link_to t("locales.#{locale}"), root_path(:locale => locale), :class => "dropdown-item"  %>
      <% end %>
    </div>
  </div>

  <div class="dropdown dropdown-selector-phone">
    <button class="dropdown-toggle dropdown-btn" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
      <%= t("locales_short.#{I18n.locale}") %>
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <% [:fr, :en, :nl].each do |locale| %>
      <%= link_to t("locales_short.#{locale}"), root_path(:locale => locale), :class => "dropdown-item"  %>
      <% end %>
    </div>
  </div>

<%
=begin %>
  <div class="navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>

        <li class="nav-item navbar-item mr-3 nav-link">
          <%= link_to_unless_current "Dashboard", { controller: "pages", action: "dashboard" } do %>
            <p>Dashboard</p>
          <% end %>
        </li>
        <li class="nav-item navbar-item ml-3 mr-5 nav-link">
          <%= link_to_unless_current "Journal", { controller: "pages", action: "journal" } do %>
            <p>Journal</p>
          <% end %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "user.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Update profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>

      <% else %>
        <li class="nav-item">
          <%= link_to "Join the movement", new_user_registration_path, class: "btn register-btn" %>
        </li>
        <li class="nav-item ml-3 mr-1" style="display: flex; align-items: center;">
          |
        </li>
        <li class="nav-item" style="display: flex; align-items: center;">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
  <%
=end %>
</div>
