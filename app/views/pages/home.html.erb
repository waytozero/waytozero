<div class="bg--gradient">
  <div class="hero hero--full hero--bg--img">
    <div class="hero__wrapper">
      <div class="hero__text">
        <h1 class="hero__title"><%= t('home.main_title_part1') %><%= " " %><span class="underlined"><%= t('home.main_title_part2') %><%= " " %></span><%= t('home.main_title_part3') %></h1>
        <div class="hero__subtext">
          <div class="hero__p">
            <p><%= t('home.company_mission') %></p>
            <div class="mail-form-container">
              <div class="mail-form sfcontainer1">
                <form class="singular-form sfform1" action="https://waytozero.us4.list-manage.com/subscribe/post?u=82e07f35094db3ac030eaec10&amp;id=f4c26eaa14" method="POST">

                  <button class="shown trigger sftrigger1" type="button"><%= t('home.notify') %></button>
                  <div class="input-container">
                      <input type="email" class="placeholder sfinput1"value="" name="EMAIL" placeholder="<%= t('home.email_placeholder') %>" required>
                      <button type="button"class="email-button sfsubmit1"><%= t('home.show_interest') %></button>
                  </div>
                  <div class="success sfsuccess1"><%= t('home.thank_you') %></div>
                </form>
              </div>
              <div class="email-warner sfemailwarner1 d-none">
                <p><%= t('home.email_warner') %></p>
              </div>
            </div>
          </div>
          <%= image_tag("waste.png") %>
        </div>
      </div>
      <svg class="hero__curve" viewBox="0 0 1620 228" xmlns="http://www.w3.org/2000/svg">
          <path d="m1619.44517.35433528c-399.39777 223.02017072-694.714626 278.49386172-885.950558 166.42107172-181.341926-106.2744605-391.865473-161.74815116-631.57064-166.42107177h-101.923972v227.64566477h1620v-227.64566477h-.5547z"></path>
      </svg>
    </div>
  </div>
</div>
